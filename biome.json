{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",

	"formatter": {
		"formatWithErrors": true
	},

	"json": {
		"formatter": {
			"enabled": true
		}
	},

	"organizeImports": {
		"enabled": true
	},

	"javascript": {
		"formatter": {
			"enabled": true,

			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"bracketSameLine": true,
			"quoteStyle": "single",
			"attributePosition": "auto"
		}
	}
}
